---
/** Grille des 4 stats avec animation au scroll + stagger (comme React HomePage) */
import AnimateInView from './AnimateInView.astro'
import Card from './ui/Card.astro'

interface Props {
  locale?: 'fr' | 'en'
}
const { locale = 'fr' } = Astro.props
const labels = locale === 'fr'
  ? { years: "Années d'expérience", partners: 'Partenaires', clients: 'Clients satisfaits', projects: 'Projets réalisés' }
  : { years: 'Years of experience', partners: 'Partners', clients: 'Satisfied clients', projects: 'Projects completed' }
---
<section class="bg-gradient-to-b from-black to-[#0A1929] py-16">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
      <AnimateInView stagger={0}>
        <Card class="flex flex-col items-center gap-3 border-gray-800 py-6 text-center transition-colors hover:border-[#4CAF50]">
          <div class="rounded-lg p-3 text-[#4CAF50]">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6" /><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18" /><path d="M4 22h16" /><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22" /><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22" /><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z" />
          </svg>
        </div>
        <span class="text-3xl font-bold text-white">10+</span>
        <span class="text-sm text-gray-400">{labels.years}</span>
      </Card>
    </AnimateInView>
    <AnimateInView stagger={1}>
      <Card class="flex flex-col items-center gap-3 border-gray-800 py-6 text-center transition-colors hover:border-[#4CAF50]">
        <div class="rounded-lg p-3 text-[#4CAF50]">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" /><rect width="20" height="14" x="2" y="6" rx="2" />
          </svg>
        </div>
        <span class="text-3xl font-bold text-white">50+</span>
        <span class="text-sm text-gray-400">{labels.partners}</span>
      </Card>
    </AnimateInView>
    <AnimateInView stagger={2}>
      <Card class="flex flex-col items-center gap-3 border-gray-800 py-6 text-center transition-colors hover:border-[#4CAF50]">
        <div class="rounded-lg p-3 text-[#4CAF50]">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M22 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" />
          </svg>
        </div>
        <span class="text-3xl font-bold text-white">500+</span>
        <span class="text-sm text-gray-400">{labels.clients}</span>
      </Card>
    </AnimateInView>
    <AnimateInView stagger={3}>
      <Card class="flex flex-col items-center gap-3 border-gray-800 py-6 text-center transition-colors hover:border-[#4CAF50]">
        <div class="rounded-lg p-3 text-[#4CAF50]">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <polyline points="22 7 13.5 15.5 8.5 10.5 2 17" /><polyline points="16 7 22 7 22 13" />
          </svg>
        </div>
        <span class="text-3xl font-bold text-white">100+</span>
        <span class="text-sm text-gray-400">{labels.projects}</span>
      </Card>
    </AnimateInView>
  </div>
  </div>
</section>
