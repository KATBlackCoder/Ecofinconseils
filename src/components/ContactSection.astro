---
/** Page Contact (design React): formulaire + infos (adresse, t√©l, email, horaires) + carte placeholder */
import AnimateInView from './AnimateInView.astro'
import Card from './ui/Card.astro'
import ContactForm from './ContactForm.vue'

interface Props {
  locale: 'fr' | 'en'
}
const { locale } = Astro.props

const infoTitle = locale === 'fr' ? 'Informations de Contact' : 'Contact Information'
const contactInfo =
  locale === 'fr'
    ? [
        { label: 'Bamako, Mali', icon: 'map', colorClass: 'text-blue-400' },
        { label: '+223 XX XX XX XX', icon: 'phone', colorClass: 'text-[#4CAF50]' },
        { label: 'contact@ecofinconseils.ml', icon: 'mail', colorClass: 'text-purple-400' },
        { label: 'Lun - Ven : 8h - 18h', icon: 'clock', colorClass: 'text-orange-400' },
      ]
    : [
        { label: 'Bamako, Mali', icon: 'map', colorClass: 'text-blue-400' },
        { label: '+223 XX XX XX XX', icon: 'phone', colorClass: 'text-[#4CAF50]' },
        { label: 'contact@ecofinconseils.ml', icon: 'mail', colorClass: 'text-purple-400' },
        { label: 'Mon - Fri: 8am - 6pm', icon: 'clock', colorClass: 'text-orange-400' },
      ]
---
<section class="bg-gradient-to-b from-black to-[#0A1929] py-20">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="mx-auto grid max-w-6xl grid-cols-1 gap-12 lg:grid-cols-2">
      <!-- Contact Form -->
      <AnimateInView variant="slow">
        <Card class="border-gray-800 p-8">
          <ContactForm client:load locale={locale} />
        </Card>
      </AnimateInView>

      <!-- Contact Info -->
      <AnimateInView variant="slow">
        <div class="space-y-6">
          <h2 class="mb-6 text-2xl font-bold text-white">{infoTitle}</h2>
          <div class="space-y-4">
            {contactInfo.map((info) => (
              <Card class="flex items-center gap-4 border-gray-800 p-6 transition-colors hover:border-[#4CAF50]">
                <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-[#4CAF50]/10">
                  {info.icon === 'map' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class={`h-6 w-6 ${info.colorClass}`} width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" />
                      <circle cx="12" cy="10" r="3" />
                    </svg>
                  )}
                  {info.icon === 'phone' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class={`h-6 w-6 ${info.colorClass}`} width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                    </svg>
                  )}
                  {info.icon === 'mail' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class={`h-6 w-6 ${info.colorClass}`} width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <rect width="20" height="16" x="2" y="4" rx="2" />
                      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                    </svg>
                  )}
                  {info.icon === 'clock' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class={`h-6 w-6 ${info.colorClass}`} width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <circle cx="12" cy="12" r="10" />
                      <polyline points="12 6 12 12 16 14" />
                    </svg>
                  )}
                </div>
                <p class="text-gray-300">{info.label}</p>
              </Card>
            ))}
          </div>

          <!-- Map Placeholder -->
          <Card class="overflow-hidden border-gray-800">
            <div class="flex aspect-video items-center justify-center bg-gradient-to-br from-[#0D2137] to-[#0A1929]">
              <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto mb-3 h-12 w-12 text-[#4CAF50]" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
                <p class="text-gray-400">Bamako, Mali</p>
              </div>
            </div>
          </Card>
        </div>
      </AnimateInView>
    </div>
  </div>
</section>
