---
import BaseLayout from '../../layouts/BaseLayout.astro'
import SectionHero from '../../components/SectionHero.vue'
import StatsCards from '../../components/StatsCards.vue'
import MissionSection from '../../components/MissionSection.vue'
import CtaSection from '../../components/CtaSection.vue'
import data from '../../data/en/home.json'
---
<BaseLayout
  title="Home"
  description="Your trusted financial partner. Expert in banking, insurance and strategic consulting in Bamako."
>
  <SectionHero
    client:load
    title={data.hero.title}
    subtitle={data.hero.subtitle}
    variant="full"
    ctaText={data.hero.ctaText}
    ctaHref={data.hero.ctaHref}
  />
  <StatsCards client:load stats={data.stats} />
  <MissionSection
    client:load
    title={data.mission.title}
    body={data.mission.body}
    highlight={data.mission.highlight}
  />
  <CtaSection
    client:load
    title={data.cta.title}
    description={data.cta.description}
    subtext={data.cta.subtext}
    ctaText={data.cta.ctaText}
    ctaHref={data.cta.ctaHref}
  />
</BaseLayout>
