---
import BaseLayout from '../layouts/BaseLayout.astro'
import SectionHero from '../components/SectionHero.vue'
import ServicesSection from '../components/ServicesSection.vue'
import data from '../data/fr/services.json'
---
<BaseLayout title="Services" description="Nos trois pôles : Banque, Assurance, Bureau d'études. Ecofinconseils, Bamako.">
  <SectionHero
    client:load
    title="Nos Services"
    subtitle="Trois pôles d'excellence pour répondre à tous vos besoins financiers"
    variant="compact"
  />
  <ServicesSection
    client:load
    services={data.services}
    whyTitle={data.whyTitle}
    whyItems={data.whyItems}
  />
</BaseLayout>
